#:kivy 2.2
<MDLabel>:
    # font_size: 24
    #size_hint: (0.1, 0.05)
    size_hint_y: 0.05

<IconListItem>

    IconLeftWidget:
        icon: root.icon



SettingsScreen
    animal_id: animal_id
    roi: roi
    num_odors: num_odors_field
    num_trials: num_trials_field
    odor_duration: odor_duration
    odor_interval: odor_interval


    MDFloatLayout:
        # anchor_x: "center"
        # anchor_y: "top"
        # # size_hint: (0.5, 0.5)
        size: root.width, root.height

        MDGridLayout:
            pos_hint: {'x':0.05, 'y':0.1}
            size_hint: (0.8, 0.8)
            cols:1         


            MDGridLayout:
                # rows:4
                cols:1

                MDTextField:
                    id: animal_id
                    helper_text: "e.g. 123456-1-2"
                    hint_text: "Animal ID"
                    helper_text_mode: "persistent"
                    required: True
                    

                MDTextField:
                    id: roi
                    hint_text: "ROI #"
                    required: True
                    input_filter: "int"

                MDTextField:
                    id: num_odors_field
                    input_filter: "int"
                    pos_hint: {'center_x': .5, 'center_y': .6}
                    size_hint_x: None
                    width: "100dp"
                    hint_text: "# of Odors"
                    on_focus: if self.focus: app.odors_menu.open()

                MDTextField:
                    id: num_trials_field
                    input_filter: "int"
                    pos_hint: {'center_x': .5, 'center_y': .6}
                    size_hint_x: None
                    width: "100dp"
                    hint_text: "# of Trials/Odor"
                    on_focus: if self.focus: app.trials_menu.open()

                MDTextField:
                    id: odor_duration
                    hint_text: "Odor length (s)"
                    required: True
                    input_filter: "float"

                MDTextField:
                    id: odor_interval
                    hint_text: "Time btw odors (s)"
                    required: True
                    input_filter: "float"
            
                # # Randomize radio button
                # MDCheckBox:
                #     size_hint: None, None
                #     size: "48 dp", "48 dp"
                #     pos_hint: {'center_x': .5, 'center_y': .5}

                # Folder directory picker

                # Spinner:
                #     id: spinner_id
                #     text: "# of Odors"
                #     values: [f"{i}" for i in range(1,9)]
                #     on_text: root.spinner_clicked(spinner_id.text)



            MDFillRoundFlatButton:
                text: "Save"

                

