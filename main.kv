#:kivy 2.2
<MDLabel>:
    # font_size: 24
    #size_hint: (0.1, 0.05)
    size_hint_y: 0.05

MDScreen:
    MDTextField:
        id: field
        pos_hint: {'center_x': .5, 'center_y': .6}
        size_hint_x: None
        width: "200dp"
        hint_text: "# of Odors"
        on_focus: if self.focus: app.menu.open()

<SettingsScreen>
    animal_id: animal_id
    roi: roi
    num_odors: num_odors
    num_trials: num_trials

    MDFloatLayout:
        # anchor_x: "center"
        # anchor_y: "top"
        # # size_hint: (0.5, 0.5)
        size: root.width, root.height

        MDGridLayout:
            pos_hint: {'x':0.05, 'y':0.1}
            size_hint: (0.8, 0.8)
            cols:1         


            MDGridLayout:
                # rows:4
                cols:1

                MDTextField:
                    id: animal_id
                    hint_text: "Animal ID"
                    required: True

                MDTextField:
                    id: roi
                    hint_text: "ROI #"
                    required: True

                MDTextField:
                    id: num_odors
                    hint_text: "# of Odors"
                    required: True
                    input_filter: "int"
                    
                MDTextField:
                    id: num_trials
                    hint_text: "# of Trials/Odor"
                    required: True
                    input_filter: "int"

                # Spinner:
                #     id: spinner_id
                #     text: "# of Odors"
                #     values: [f"{i}" for i in range(1,9)]
                #     on_text: root.spinner_clicked(spinner_id.text)



            MDFillRoundFlatButton:
                text: "Save"

                

